{
  "name": "next-modal-pages-loader",
  "version": "0.0.0-development",
  "repository": "https://github.com/MarianoArg/next-modal-pages-loader.git",
  "bugs": "https://github.com/MarianoArg/next-modal-pages-loader/issues",
  "author": "Marian Arga√±aras <arga.mariano@gmail.com>",
  "license": "MIT",
  "bin": {
    "mploader": "./src/pages-loader-cli.js"
  },
  "devDependencies": {
    "codecov": "^3.5.0",
    "faker": "^4.1.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "mock-fs": "^4.4.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.5.3",
    "semantic-release": "^17.0.8",
    "uuid": "^3.0.1"
  },
  "dependencies": {
    "colors": "^1.1.2",
    "findup": "^0.1.5",
    "glob": "^7.1.1",
    "yargs": "^14.0.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage && codecov",
    "start": "node src/pages-loader-cli.js",
    "start:help": "node src/pages-loader-cli.js --help",
    "semantic-release": "semantic-release",
    "precommit": "lint-staged",
    "ci": "npm-run-all test:ci start"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/modalPages/**",
      "!**/modal_pages/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "./coverage/"
  },
  "config": {
    "next-modal-pages-loader": {
      "searchDir": "./modalPages/pages",
      "groupByDir": [
        "home",
        "activity",
        "[test].js",
        "fakeDir"
      ],
      "pattern": "**/*.js",
      "outputDir": "./modal_pages"
    }
  }
}
